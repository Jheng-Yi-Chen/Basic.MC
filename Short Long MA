var1 = average(close,lenght1);
var2 = average(close,length2);

condition1 = var1 cross over var2;
condition2 = var1 cross under var2;

if condition1 then var3 = lowest(low,1);
plot3(var3, "Short MA Cross Over Long MA");

if condition2 then var4 = highest(high,1);
plot4(var4, "Short MA Cross Under Long MA");
